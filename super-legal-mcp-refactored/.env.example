# Super-Legal MCP Server Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Anthropic Claude API (Required for agent orchestration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# LEGAL DATABASE API KEYS
# =============================================================================

# CourtListener - Court opinions and dockets
# Get your key at: https://www.courtlistener.com/help/api/
COURTLISTENER_API_TOKEN=your_courtlistener_token_here

# USPTO - Patent data
# Get your key at: https://developer.uspto.gov/
USPTO_API_KEY=your_uspto_api_key_here

# GovInfo - Government publications
# Get your key at: https://api.govinfo.gov/
GOVINFO_API_KEY=your_govinfo_api_key_here

# =============================================================================
# SEARCH & AI ENHANCEMENT
# =============================================================================

# Exa AI - Neural search enhancement
# Get your key at: https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# Google Gemini - Intelligent filtering (1M context)
# Get your key at: https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# REGULATORY API KEYS (Optional but recommended)
# =============================================================================

# FDA OpenFDA - Drug and device data
# Get your key at: https://open.fda.gov/apis/authentication/
FDA_API_KEY=your_fda_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Environment (development, production)
NODE_ENV=development

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# OPTIONAL: MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus metrics endpoint
METRICS_ENABLED=true
METRICS_PORT=9090

# OpenTelemetry tracing
OTEL_ENABLED=false
OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# =============================================================================
# OPTIONAL: ADVANCED FEATURES
# =============================================================================

# Code execution sandbox (for financial modeling)
CODE_EXECUTION_ENABLED=false
CODE_EXECUTION_TIMEOUT=30000

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Cache TTL in seconds
CACHE_TTL=3600
