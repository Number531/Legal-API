{
  "name": "super-legal-mcp-refactored",
  "version": "2.0.0",
  "description": "Enhanced CourtListener MCP Server - Refactored modular architecture",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "orchestrator": "node src/server/startOrchestrator.js",
    "gpt5": "node src/server/start-gpt5.js",
    "gpt5-enhanced": "node src/server/start-gpt5-enhanced.js",
    "claude": "node src/server/start-claude-server.js",
    "sdk-server": "node src/server/claude-sdk-server.js",
    "shadow-proxy": "node migration-tools/shadow-mode-proxy.js",
    "postinstall": "patch-package",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:sdk": "jest test/sdk --config jest.config.js",
    "test:parity": "jest test/parity --config jest.config.js",
    "test:load": "jest test/sdk/load-latency.test.js --config jest.config.js --testTimeout=120000",
    "test:security": "jest test/sdk/safety.test.js test/sdk/failure-injection.test.js --config jest.config.js",
    "test:all": "jest --config jest.config.js"
  },
  "keywords": [
    "mcp",
    "legal",
    "courtlistener",
    "sec",
    "uspto",
    "federal-register",
    "govinfo"
  ],
  "author": "Enhanced Legal MCP Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.61",
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.21.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@opentelemetry/api": "^1.9.0",
    "@supabase/supabase-js": "^2.45.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "openai": "^4.67.1",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/test-sequencer": "^29.7.0",
    "jest": "^29.7.0",
    "patch-package": "^8.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "index.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
